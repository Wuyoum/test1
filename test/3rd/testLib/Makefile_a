LIB_VERSION     =
LIB_CC          =gcc
LIB_DEBUG 		=
LIB_CFLAGS		=-Wall
LIB_AR			=ar
LIB_ARFLAGS     =rv
LIB_SOURCES	 	=$(wildcard ./3rd/testLib/*.cpp)
LIB_INCLUDES    =-I./inc/3rd/testLib
LIB_NAMES   =
LIB_PATH 	=
LIB_OBJ         =$(patsubst %.cpp, %.o, $(LIB_SOURCES))
LIB_TARGET      =libtestLib.a
 
#link
$(LIB_TARGET):$(LIB_OBJ)
	@mkdir -p LIB_output
	$(LIB_AR) $(LIB_ARFLAGS) LIB_output/$(LIB_TARGET) $(LIB_OBJ)
	@cp -f LIB_output/$(LIB_TARGET) ./lib/3rd/testLib
	@rm -rf $(LIB_OBJ)
 
#compile
%.o: %.cpp
	$(LIB_CC) $(LIB_INCLUDES) $(LIB_DEBUG) -c $(LIB_CFLAGS) $< -o $@
		
.PHONY:clean
clean:
	@echo "Remove linked and compiled files......"
	rm -rf ./lib/3rd/testLib/$(LIB_TARGET)
	rm -rf $(LIB_OBJ) $(LIB_TARGET) LIB_output 